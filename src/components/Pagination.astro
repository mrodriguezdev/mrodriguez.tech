---
import ArrowRightIcon from "./icons/ArrowRight.astro";
import ArrowLeftIcon from "./icons/ArrowLeft.astro";

const { prevUrl, nextUrl } = Astro.props;
---

<div class="flex justify-between py-5 md:py-6">
    <div>
        {
            prevUrl && (
                <a class="text-base md:text-lg text-verde-lima hover:text-gris-oscuro dark:hover:text-blanco-puro hover:underline flex items-center transition-colors duration-300 ease-in-out" href={prevUrl}>
                    <ArrowLeftIcon /> Página anterior
                </a>
            )
        }
    </div>
    <div>
        {
            nextUrl && (
                <a class="text-base md:text-lg text-verde-lima hover:text-gris-oscuro dark:hover:text-blanco-puro hover:underline flex items-center transition-colors duration-300 ease-in-out" href={nextUrl}>
                    Siguiente página <ArrowRightIcon  />
                </a>
            )
        }
    </div>
</div>
