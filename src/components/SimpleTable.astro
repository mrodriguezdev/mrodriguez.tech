---
interface SimpleTableProps {
  headers: string[];
  rows: string[][];
}

const { headers, rows } = Astro.props as SimpleTableProps;
---

<div class="overflow-x-auto not-prose">
  <table
    class="w-full border-collapse mt-4 text-sm
           text-negro-profundo dark:text-gris-claro
           bg-transparent"
  >
    <thead class="bg-gris-oscuro">
      <tr>
        {headers.map((header) => (
          <th
            class="border border-gris-oscuro px-3 py-2 text-left
                   font-semibold text-blanco-puro"
          >
            {header}
          </th>
        ))}
      </tr>
    </thead>

    <tbody>
      {rows.map((row) => (
        <tr class="even:bg-transparent">
          {row.map((cell) => (
            <td
              class="border border-gris-oscuro px-3 py-2 text-left"
            >
              {cell}
            </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>
